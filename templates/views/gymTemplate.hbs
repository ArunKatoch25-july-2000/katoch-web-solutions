<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>AK-Fitness center</title>
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link rel="icon" type="image/x-icon" href="../Images/gymFavicon.png">
    <link
      href="https://fonts.googleapis.com/css2?family=Baloo+Bhai+2&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="css/gym.css" />
  </head>
  <body>
    <header class="header">
      <!-- Left for logo -->
      <div class="left">
        <img
          src="../Images/Dumbell.png"
          alt="dumbell"
          width="56px"
          class="dumbell-image"
        />
        <span>AK Fitness</span>
      </div>
      <!-- Mid box for navbar -->
      <ul class="navbar">
        <li><a href="#" class="navmenus">Home</a></li>
        <li><a href="#" class="navmenus">About Us</a></li>
        <li><a href="#" class="navmenus">Fitness Calculator</a></li>
        <li><a href="#" class="navmenus">Contact Us</a></li>
      </ul>
      <!-- Right box for buttons -->
      <div class="right">
        <button class="btn">Call Us Now</button><button class="btn">E-mail Us</button>
      </div>
    </header>

    <form>
      <h1>Join the best gym of Kasauli now</h1>
      <input
        type="text"
        name="Name"
        id="Name"
        placeholder="Enter your name*"
        required
      />

      <input
        type="text"
        name="Gender"
        placeholder="Enter your Gender*"
        required
      />

      <input type="text" name="Age" placeholder="Enter your Age*" required />

      <input
        type="text"
        name="Phone"
        placeholder="Enter your phone number*"
        required
      />

      <input
        type="email"
        name="e-mail"
        placeholder="Enter your e-mail(optional)"
      />

      <input
        type="text"
        name="Locality"
        placeholder="Enter your address*"
        required
      />
      <div class="bottom-buttons">
        <button type="submit">Submit</button>
        <button type="reset">Reset</button>
      </div>
    </form>
  </body>
</html>